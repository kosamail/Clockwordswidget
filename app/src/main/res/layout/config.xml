<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <!--android:textSize="@dimen/config_activity_textsize"-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivcircle"
        android:src="@drawable/circle"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectcolor"
        android:id="@+id/tvtext"
        android:textStyle="bold"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingStart="5dp"
        android:layout_above="@+id/checkzeroback"
        android:layout_toRightOf="@+id/ivcircle"
        android:layout_toEndOf="@+id/ivcircle"
        android:layout_marginLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkzeroback"
        android:id="@+id/checkzeroback"
        android:layout_below="@+id/ivcircle"
/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/ok"
        android:id="@+id/button"
        android:layout_below="@+id/checkzeroback"
        android:layout_centerHorizontal="true">
    </Button>


</RelativeLayout>
